<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#DDDDDD"
        android:padding="0dp"
        android:layout_margin="5dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categoryRowLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:layout_gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryListRowImageCV"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/categoryRowName"
                app:cardCornerRadius="25dp"
                app:cardPreventCornerOverlap="false"
                android:padding="0dp"
                android:layout_margin="2dp"
                app:cardElevation="0.7dp"
                app:cardMaxElevation="1dp"
                >

                <ImageView
                    android:id="@+id/categoryListRowImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/shopping"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/categoryRowName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/courgette"

                android:gravity="center"
                android:foregroundGravity="center_horizontal"
                android:text="placeholder"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/selectCategoryBT"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryListRowImageCV" />

            <Button
                android:id="@+id/selectCategoryBT"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="100dp"
                android:layout_marginBottom="3dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@string/select"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryRowName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>